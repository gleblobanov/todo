extends layout

block content
  h1 #{title}
  .container
    form
      .form-group
        input.form-control.input-lg(type='text', placeholder='Add a todo...', ng-model='formData.text')
        button.btn.btn-primary.btn-lg(type='button', ng-click='createTodo()')
          | Add Todo
    ul(ng-repeat='todo in todoData')
      li
        input(type='checkbox', ng-click="deleteTodo(todo.id)")
        | &nbsp;{{todo.text}}

